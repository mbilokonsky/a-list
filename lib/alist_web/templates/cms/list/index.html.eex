<h1>Listing Lists</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Views</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for list <- @lists do %>
    <tr>
      <td><%= list.title %></td>
      <td><%= list.body %></td>
      <td><%= list.views %></td>

      <td>
        <span><%= link "Show", to: Routes.cms_list_path(@conn, :show, list) %></span>
        <span><%= link "Edit", to: Routes.cms_list_path(@conn, :edit, list) %></span>
        <span><%= link "Delete", to: Routes.cms_list_path(@conn, :delete, list), method: :delete, data: [confirm: "Are you sure?"] %></span>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

<span><%= link "New List", to: Routes.cms_list_path(@conn, :new) %></span>
